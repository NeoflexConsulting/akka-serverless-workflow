{
  "id": "sampleWorkflow",
  "version": "1.0",
  "schemaVersion": "0.7",
  "name": "Sample Workflow",
  "description": "Sample Workflow",
  "start": "InitialState",
  "states": [
    {
      "name": "InitialState",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "upper"
          },
          "actionDataFilter": {
            "toStateData": "${upperInput}"
          }
        }
      ],
      "transition": "IsNumber"
    },
    {
      "name": "IsNumber",
      "type": "switch",
      "stateDataFilter": {
        "input": "${upperInput}"
      },
      "dataConditions": [
        {
          "condition": "${is_number}",
          "transition": "ToInt"
        }
      ],
      "default": {
        "transition": "GetCustomerByName"
      }
    },
    {
      "name": "ToInt",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "to_int"
          },
          "actionDataFilter": {
            "fromStateData": "${upperInput}",
            "toStateData": "${age}"
          }
        }
      ],
      "transition": "GetCustomerByAge"
    },
    {
      "name": "GetCustomerByName",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "get_customer_by_name"
          },
          "actionDataFilter": {
            "fromStateData": "${upperInput}",
            "toStateData": "${result}"
          }
        }
      ],
      "end": true
    },
    {
      "name": "GetCustomerByAge",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "get_customer_by_age"
          },
          "actionDataFilter": {
            "fromStateData": "${age}",
            "toStateData": "${result}"
          }
        }
      ],
      "end": true
    }
  ]
}