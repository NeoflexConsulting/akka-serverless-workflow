{
  "id": "sampleWorkflow",
  "version": "1.0",
  "schemaVersion": "0.7",
  "name": "Sample Workflow",
  "description": "Sample Workflow",
  "start": "InitialState",
  "functions": [
    {
      "name": "upperInput",
      "operation": "upperInput",
      "type": "custom"
    },
    {
      "name": "upper",
      "operation": "upper",
      "type": "custom"
    },
    {
      "name": "to_int",
      "operation": "to_int",
      "type": "custom"
    },
    {
      "name": "get_customer_by_name",
      "operation": "get_customer_by_name",
      "type": "custom"
    },
    {
      "name": "get_customer_by_age",
      "operation": "get_customer_by_age",
      "type": "custom"
    }
  ],
  "states": [
    {
      "name": "InitialState",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "upper",
            "arguments": {
              "input": "${.}"
            }
          },
          "actionDataFilter": {
            "toStateData": "${ {uppercased: .} }"
          }
        }
      ],
      "transition": "IsNumber"
    },
    {
      "name": "IsNumber",
      "type": "operation",
      "actions": [
        {
          "functionRef": {
            "refName": "is_number",
            "arguments": {
              "input": "${.uppercased}"
            }
          },
          "actionDataFilter": {
            "toStateData": "${ {isnumber: .} }"
          }
        }
      ],
      "transition": "CheckNumber"
    },
    {
      "name": "CheckNumber",
      "type": "switch",
      "stateDataFilter": {
        "input": "${.}",
        "output": "${.}"
      },
      "dataConditions": [
        {
          "condition": "${.isnumber}",
          "transition": "ToInt"
        }
      ],
      "default": {
        "transition": "GetCustomerByName"
      }
    },
    {
      "name": "ToInt",
      "type": "operation",
      "stateDataFilter": {
        "input": "${.uppercased}",
        "output": "${ {age} }"
      },
      "actions": [
        {
          "functionRef": {
            "refName": "to_int",
            "arguments": {
              "input": "${.}"
            }
          },
          "actionDataFilter": {
            "fromStateData": "${.}",
            "toStateData": "${ {age : .}}"
          }
        }
      ],
      "transition": "GetCustomerByAge"
    },
    {
      "name": "GetCustomerByName",
      "type": "operation",
      "stateDataFilter": {
        "input": "${.uppercased}",
        "output": "${ {customer} }"
      },
      "actions": [
        {
          "functionRef": {
            "refName": "get_customer_by_name",
            "arguments": {
              "input": "${.}"
            }
          },
          "actionDataFilter": {
            "fromStateData": "${.}",
            "toStateData": "${{customer:.}}"
          }
        }
      ],
      "end": true
    },
    {
      "name": "GetCustomerByAge",
      "type": "operation",
      "stateDataFilter": {
        "input": "${.age}",
        "output": "${ {customer} }"
      },
      "actions": [
        {
          "functionRef": {
            "refName": "get_customer_by_age"
          },
          "actionDataFilter": {
            "fromStateData": "${.}",
            "toStateData": "${{customer:.}}"
          }
        }
      ],
      "end": true
    }
  ]
}